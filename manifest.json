{
  "manifest_version": 2,
  "name": "Site Watcher",
  "version": "0.1",

  "background": {
    "scripts": [
      "chromeInterface.js",
      "classAndTool.js",
      "background.js"
    ],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "css":[
        "ElementSelectorStyles.css"
      ],
      "js": [
        "chromeInterface.js",
        "classAndTool.js",
        "ModalControls.js",
        "content.js",
        "ElementSelector.js"
      ],
      "run_at": "document_start"
    }
  ],
  "options_page": "bookmarksPage.html",
  "browser_action": {
          "default_icon": "images/rat.png",
          "default_title": "Site Watcher",
          "default_popup": "browserActionPopup.html"
  },
  "permissions": [
    "alarms",
    "storage",
    "tabs",
    "contextMenus",
    "<all_urls>"
  ],
  "web_accessible_resources": [
    "ElementSelectorModal.html"
  ]
}
